*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background-color: #f2f4f8;
  color: #1a1f2e;
}

a {
  color: inherit;
}

.page {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2.5rem 1.5rem 3rem;
}

.page__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 2rem;
}

.page__header h1 {
  margin: 0 0 0.35rem;
  font-size: 2rem;
}

.page__subtitle {
  margin: 0;
  color: #5a6475;
}

.refresh-button {
  border: none;
  background: #1d4ed8;
  color: #fff;
  font-weight: 600;
  padding: 0.65rem 1.2rem;
  border-radius: 0.75rem;
  cursor: pointer;
  transition: transform 150ms ease, box-shadow 150ms ease;
}

.refresh-button:hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 18px -12px rgba(24, 64, 198, 0.6);
}

.panel {
  background: #fff;
  border-radius: 1rem;
  padding: 1.25rem 1.5rem;
  margin-bottom: 1.5rem;
  box-shadow: 0 18px 45px -30px rgba(15, 23, 42, 0.45);
}

.filters {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
}

.filters__field {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
  font-size: 0.95rem;
  color: #4b5563;
}

.filters__field select {
  padding: 0.6rem 0.75rem;
  border-radius: 0.75rem;
  border: 1px solid #d2d8eb;
  background: #f8f9fb;
  font-size: 1rem;
  color: #111827;
  transition: border-color 100ms ease, background 100ms ease;
}

.filters__field select:focus {
  outline: none;
  border-color: #1d4ed8;
  background: #fff;
}

.status {
  padding: 0.75rem 1rem;
  border-radius: 0.75rem;
  margin-bottom: 1.25rem;
  font-weight: 500;
}

.status--info {
  background: #e0e7ff;
  color: #1e3a8a;
}

.status--error {
  background: #fee2e2;
  color: #991b1b;
}

.status--empty {
  background: #f3f4f6;
  color: #4b5563;
}

.hidden {
  display: none !important;
}

.video-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.video-card {
  background: #fff;
  border-radius: 1.1rem;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 18px 35px -30px rgba(15, 23, 42, 0.6);
  transition: transform 150ms ease, box-shadow 150ms ease;
}

.video-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 24px 50px -28px rgba(15, 23, 42, 0.45);
}

.video-card__media {
  position: relative;
  width: 100%;
  padding-top: 56.25%;
  overflow: hidden;
}

.video-card__thumbnail {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-card__content {
  padding: 1.2rem 1.35rem 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.9rem;
  flex: 1;
}

.video-card__title {
  margin: 0;
  font-size: 1.15rem;
  line-height: 1.3;
  color: #111827;
}

.video-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 0.75rem;
}

.video-card__link {
  font-size: 0.85rem;
  background: #1d4ed8;
  color: #fff;
  padding: 0.4rem 0.75rem;
  border-radius: 999px;
  text-decoration: none;
  white-space: nowrap;
}

.video-card__link:hover {
  background: #1139ab;
}

.video-card__description {
  margin: 0;
  font-size: 0.95rem;
  color: #4b5563;
  min-height: 2.5rem;
}

.video-card__stats {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.75rem;
  margin: 0;
}

.video-card__stats dt {
  font-size: 0.75rem;
  text-transform: uppercase;
  color: #6b7280;
}

.video-card__stats dd {
  margin: 0.1rem 0 0;
  font-weight: 600;
  color: #111827;
}

.product {
  display: grid;
  grid-template-columns: 80px 1fr;
  gap: 0.75rem;
  padding: 0.85rem;
  border-radius: 0.9rem;
  background: #f8fafc;
  border: 1px solid #e5e7eb;
}

.product__image-wrapper {
  width: 80px;
  height: 80px;
  border-radius: 0.75rem;
  overflow: hidden;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product__image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.product__title {
  margin: 0;
  font-size: 0.95rem;
}

.product__price {
  margin: 0.2rem 0 0;
  font-weight: 600;
  color: #2563eb;
}

.product__meta {
  margin: 0.35rem 0 0;
  font-size: 0.85rem;
  color: #6b7280;
}

.video-card__footer {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 0.6rem;
  font-size: 0.85rem;
  color: #6b7280;
}

.video-card__creator {
  font-weight: 600;
  color: #1f2937;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
}

.pagination__button {
  padding: 0.6rem 1.1rem;
  font-size: 0.95rem;
  border-radius: 999px;
  border: 1px solid #d1d5db;
  background: #fff;
  cursor: pointer;
  transition: background 120ms ease, color 120ms ease;
}

.pagination__button:disabled {
  cursor: not-allowed;
  opacity: 0.45;
}

.pagination__button:not(:disabled):hover {
  background: #1d4ed8;
  color: #fff;
  border-color: #1d4ed8;
}

.pagination__indicator {
  font-weight: 600;
  color: #1f2937;
}

@media (max-width: 720px) {
  .page {
    padding: 1.75rem 1rem 2.5rem;
  }

  .page__header {
    flex-direction: column;
    align-items: stretch;
  }

  .refresh-button {
    align-self: flex-start;
  }

  .video-card__header {
    flex-direction: column;
    align-items: stretch;
  }

  .video-card__link {
    align-self: flex-start;
  }

  .product {
    grid-template-columns: 60px 1fr;
  }
}
